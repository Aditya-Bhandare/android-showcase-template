<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    tools:context="com.aerogear.androidshowcase.features.authentication.AuthenticationFragment">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="false"
        android:background="@drawable/authentication_background"
        android:cropToPadding="false"
        android:scaleType="centerCrop" />

    <Button
        android:id="@+id/keycloakLogin"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/authentication_button_margin_bottom"
        android:layout_marginStart="@dimen/authentication_button_margin_left"
        android:layout_marginEnd="@dimen/authentication_button_margin_right"
        android:background="@color/colorPrimary"
        android:text="@string/keycloak_login"
        android:textColor="@android:color/background_light" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="@dimen/openid_image_width"
        android:layout_height="@dimen/openid_image_height"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/openid_margin_top"
        app:srcCompat="@drawable/ic_openid_connect" />

    <TextView
        android:id="@+id/auth_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="#fff" />

</RelativeLayout>
